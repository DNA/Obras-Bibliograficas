<div class="mx-auto w-2/3 my-10">
  <h1 class="uppercase text-lg text-blue-400 font-bold mb-3">Autores</h1>

  <div class="bg-white rounded shadow-xl">
    <div class="px-6 py-5">

      <% if notice %>
        <div class="mb-5 rounded border border-green-600 bg-green-200 text-green-600 px-3 py-2 shadow">
          <%= notice %>
        </div>
      <% end %>

      <% if @authors.size.positive? %>
        <%= render 'table_list' %>
      <% else %>
        <p class="text-gray-500">Nenhum autor cadastrado no momento</p>
      <% end %>
    </div>
    <div class="bg-gray-200 px-6 py-3 rounded-b flex flex-row-reverse">
      <%= link_to 'Importar nomes', load_authors_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>