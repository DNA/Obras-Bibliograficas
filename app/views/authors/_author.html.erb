<tr class="even:bg-gray-200">
  <td class="px-3 py-2"><%= author.name %></td>
  <td class="px-3 py-2"><%= author.name.bibliography %></td>
  <td class="px-3 py-2">
    <% if author.new_record? %>
      <%= validation_status(author) %>
      <%= hidden_field_tag 'name_list[]', author.name %>
    <% else %>
      <%= link_to 'remover', author_path(author), method: :delete, class: 'text-red-500' %>
    <% end %>
  </td>
</tr>